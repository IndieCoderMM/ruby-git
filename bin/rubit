#!/usr/bin/env ruby

command, *args = ARGV

if command.nil?
    $stderr.puts "ğŸ”§ Usage: rubit <command> [<args>]"
    exit 1
end

path_to_command = File.expand_path("../rubit-#{command}", __FILE__)
if !File.exist? path_to_command
    $stderr.puts "ğŸ˜• No such command"
    exit 1
end

exec path_to_command, *args